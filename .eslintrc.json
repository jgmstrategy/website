{
  "extends": "next/core-web-vitals",
  "rules": {
    "eol-last": "off",
    "semi": "error",
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "prefer-const": [
      "error",
      {
        "destructuring": "any",
        "ignoreReadBeforeAssign": false
      }
    ],
    "max-len": [
      "error",
      {
        "code": 100,
        "ignoreComments": false,
        "ignoreStrings": true
      }
    ]
  }
}